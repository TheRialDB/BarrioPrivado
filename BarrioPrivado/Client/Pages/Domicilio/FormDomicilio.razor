<EditForm Model="dom" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Lote</label>
        <div>
            <InputText class="form-control" @bind-Value="@dom.lote" />
            <ValidationMessage For="@(() => dom.lote)" />
        </div>
    </div>

    <div class="form-group">
        <label>Manzana</label>
        <div>
            <InputText class="form-control" @bind-Value="@dom.manzana" />
            <ValidationMessage For="@(() => dom.manzana)" />
        </div>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Domicilio dom { get; set; } = new Domicilio();
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
